class Solution {
    public boolean isAnagram(String s, String t) {
        // base case
        if(s.length() != t.length())return false;
        int[] look = new int[26];
        for(int i = 0 ; i< s.length(); i++){
          look[s.charAt(i) - 'a']++;
          look[t.charAt(i) - 'a']--;
        }
        for(int i : look){
          if(i != 0)return false;
        }
        return true;
    }
}
